<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/restaurantThumbnail6"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/restaurantName6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/restaurantName6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Name"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/myReservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Reservation"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/restaurantThumbnail6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/reservationPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People : 2"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/myReservation"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/reservationDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dates : 01/07/24"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/reservationPeople"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/reservationTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Times : 10:30"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/reservationDates"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/cancelButton6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>