<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/reservationThumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reservationRestaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Name"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/reservationThumbnail"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/reservationPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People: 4"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/reservationRestaurantName"
        app:layout_constraintTop_toBottomOf="@id/reservationRestaurantName"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/reservationDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024-06-01 18:00"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HH:MM dd/mm/yy"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reservationDateTime"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>