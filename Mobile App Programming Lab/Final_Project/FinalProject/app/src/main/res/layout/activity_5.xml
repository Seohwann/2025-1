<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/title5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/title5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/people"
        app:layout_constraintStart_toStartOf="@id/people"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/openinghours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opening hours"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintStart_toStartOf="@id/people"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/openingHoursText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[open] ~ [close]"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/openinghours"
        app:layout_constraintStart_toStartOf="@id/people"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/openingHoursText"
        app:layout_constraintStart_toStartOf="@id/people"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/timeText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="HH:mm"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/time"
        app:layout_constraintStart_toStartOf="@id/people"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/cancelButton5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/confirmButton5"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/confirmButton5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        app:layout_constraintStart_toEndOf="@id/cancelButton5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>